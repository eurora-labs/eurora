{
	"name": "Eurora",
	"description": "Eurora Firefox Extension",
	"version": "0.1.0",
	"manifest_version": 2,
	"homepage_url": "https://www.eurora-labs.com",
	"background": {
		"scripts": ["scripts/background/main.js"],
		"type": "module"
	},
	"content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
	"content_scripts": [
		{
			"all_frames": false,
			"js": ["content-scripts/youtube-watcher/main.js"],
			"matches": ["https://*.youtube.com/*"],
			"run_at": "document_start"
		},
		{
			"all_frames": false,
			"js": ["content-scripts/twitter-watcher/main.js"],
			"matches": ["https://x.com/*", "https://twitter.com/*"],
			"run_at": "document_start"
		},
		{
			"all_frames": false,
			"js": ["content-scripts/article-watcher/main.js"],
			"matches": ["<all_urls>"],
			"exclude_matches": [
				"https://*.youtube.com/*",
				"https://x.com/*",
				"https://twitter.com/*"
			],
			"run_at": "document_start"
		}
	],
	"browser_action": {
		"default_icon": "icons/icon-128x128.png",
		"default_popup": "pages/popup/index.html",
		"default_title": "Eurora"
	},
	"web_accessible_resources": [
		"scripts/background/*",
		"scripts/content/assets/*",
		"pages/popup/*",

		"http:/*",
		"https:/*",
		"file:/*",
		"chrome-extension:/*",
		"blob:*",
		"data:*",
		"filesystem:/*"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "dev@eurora-labs.com",
			"strict_min_version": "60.0"
		}
	},
	"storage": {
		"managed_schema": "preferences_schema.json"
	},
	"icons": {
		"16": "icons/icon-16x16.png",
		"32": "icons/icon-32x32.png",
		"48": "icons/icon-48x48.png",
		"128": "icons/icon-128x128.png"
	},
	"incognito": "split",
	"permissions": ["nativeMessaging", "tabs", "storage"],
	"host_permissions": ["<all_urls>"]
}

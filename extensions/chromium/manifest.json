{
	"name": "Eurora",
	"description": "Eurora Chrome Extension",
	"version": "0.0.8",
	"manifest_version": 3,
	"homepage_url": "https://eurora-labs.com",
	"background": {
		"service_worker": "scripts/background/main.js"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
	},
	"content_scripts": [
		{
			"all_frames": false,
			"js": ["content-scripts/script/main.js"],
			"matches": ["<all_urls>"],
			"run_at": "document_start"
		},
		{
			"all_frames": false,
			"js": ["content-scripts/youtube-watcher/main.js"],
			"matches": ["https://*.youtube.com/*"],
			"run_at": "document_start"
		},
		{
			"all_frames": false,
			"js": ["content-scripts/twitter-watcher/main.js"],
			"matches": ["https://x.com/*", "https://twitter.com/*"],
			"run_at": "document_start"
		},
		{
			"all_frames": false,
			"js": ["content-scripts/article-watcher/main.js"],
			"matches": ["<all_urls>"],
			"exclude_matches": [
				"https://*.youtube.com/*",
				"https://x.com/*",
				"https://twitter.com/*"
			],
			"run_at": "document_start"
		}
	],
	"action": {
		"default_icon": "icons/icon-128x128.png",
		"default_popup": "pages/popup/index.html",
		"default_title": "Eurora"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"scripts/background/*",
				"scripts/content/assets/*",
				"pages/popup/**/*",
				"bootstrap.js",

				"http:/*",
				"https:/*",
				"file:/*",
				"chrome-extension:/*",
				"blob:*",
				"data:*",
				"filesystem:/*",
				"drive:*"
			],
			"matches": ["<all_urls>"],
			"extension_ids": ["*"]
		}
	],
	"storage": {
		"managed_schema": "preferences_schema.json"
	},
	"icons": {
		"16": "icons/icon-16x16.png",
		"32": "icons/icon-32x32.png",
		"48": "icons/icon-48x48.png",
		"128": "icons/icon-128x128.png"
	},
	"incognito": "split",
	"permissions": ["nativeMessaging", "tabs", "storage"],
	"host_permissions": ["<all_urls>"]
}

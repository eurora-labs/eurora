{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"module": "ES2022",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"lib": ["es2022", "DOM"],
		"types": ["vite/client", "webextension-polyfill"],
		"strict": false,
		"noPropertyAccessFromIndexSignature": true,
		"allowImportingTsExtensions": true,
		"emitDeclarationOnly": true,
		"emitDecoratorMetadata": false,
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"composite": false,
		"declaration": true,
		"declarationMap": true
	},
	"include": [
		"manifest/**/*.js",
		"scripts/**/*.mjs",
		"postcss.config.mjs",
		"svelte.config.js",
		"vite.config.ts",
		"vitest.config.ts",
		"vite/presets/*.js",
		"src/**/*"
	]
}

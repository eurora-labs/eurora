{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "es6",
		"lib": ["es6", "DOM"],
		"types": ["vite/client", "firefox-webext-browser", "webextension-polyfill"],
		"strict": false,
		"noPropertyAccessFromIndexSignature": true,
		"allowImportingTsExtensions": true,
		"emitDeclarationOnly": true,
		"emitDecoratorMetadata": false,
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"composite": false,
		"declaration": true,
		"declarationMap": true
	}
}

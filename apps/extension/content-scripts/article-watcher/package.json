{
	"name": "@eurora/extension-article-watcher",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"module": "index.ts",
	"main": "index.ts",
	"exports": {
		".": {
			"types": "./index.ts",
			"svelte": "./index.ts"
		}
	},
	"scripts": {
		"dev": "vite dev",
		"build:firefox": "vite build --outDir ../../../../extensions/firefox/content-scripts/article-watcher",
		"build:chromium": "vite build --outDir ../../../../extensions/chromium/content-scripts/article-watcher",
		"build": "pnpm build:firefox && pnpm build:chromium",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.30.1",
		"@eurora/shared": "workspace:*",
		"@eurora/eslint-config": "workspace:*",
		"@eurora/typescript-config": "workspace:*",
		"@eurora/chrome-ext-shared": "workspace:*",
		"@mozilla/readability": "^0.6.0",
		"@playwright/test": "^1.53.2",
		"@testing-library/jest-dom": "^6.6.3",
		"@types/chrome": "^0.0.329",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.2",
		"globals": "^15.15.0",
		"jsdom": "^25.0.1",
		"prettier": "^3.6.2",
		"rxjs": "^7.8.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.36.0",
		"vite": "catalog:",
		"vite-plugin-dts": "^4.5.3",
		"vitest": "catalog:"
	}
}

{
	"name": "@eurora/e2e",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@playwright/test": "1.57.0",
		"@types/chrome": "^0.1.32",
		"@types/node": "^24.10.4",
		"@wdio/cli": "^9.22.0",
		"@wdio/globals": "^9.17.0",
		"@wdio/local-runner": "^9.22.0",
		"@wdio/mocha-framework": "^9.22.0",
		"@wdio/spec-reporter": "^9.18.0",
		"@wdio/types": "^9.19.1",
		"wdio-video-reporter": "^6.0.0"
	},
	"scripts": {
		"test:e2e": "pnpm test:e2e:not-tauri",
		"test:e2e:not-tauri": "wdio run ./web/wdio.web.conf.ts",
		"test:e2e:blackbox": "wdio run ./blackbox/wdio.blackbox.conf.ts",
		"test:e2e:playwright": "pnpm exec playwright test --config ./playwright/playwright.config.ts --tsconfig ./playwright/tsconfig.json",
		"test:e2e:playwright:open": "pnpm exec playwright test --config ./playwright/playwright.config.ts --tsconfig ./playwright/tsconfig.json --ui",
		"test:e2e:webextension": "pnpm exec playwright test --config ./webextension/playwright.config.ts --tsconfig ./webextension/tsconfig.json"
	},
	"dependencies": {
		"@eurora/browser-shared": "workspace:*",
		"@eurora/ui": "workspace:*",
		"get-port": "^7.1.0",
		"tmp-promise": "^3.0.3"
	}
}

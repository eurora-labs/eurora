{
	"name": "@eurora/shared",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm check --watch",
		"package": "pnpm run --sequential \"/^package:.*/\"",
		"package:svelte": "svelte-kit sync && svelte-package",
		"prepublishOnly": "pnpm run package",
		"prepare": "svelte-kit sync",
		"test": "vitest run --mode development",
		"test:watch": "vitest --watch --mode development"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.0",
		"@eslint/js": "^9.29.0",
		"@eurora/eslint-config": "workspace:*",
		"@eurora/prosemirror-core": "workspace:*",
		"@eurora/typescript-config": "workspace:*",
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.522.0",
		"@playwright/test": "^1.53.1",
		"@sveltejs/adapter-static": "catalog:svelte",
		"@sveltejs/kit": "catalog:svelte",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "catalog:svelte",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "catalog:",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.10",
		"@tanstack/table-core": "^8.21.3",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"autoprefixer": "^10.4.21",
		"clsx": "^2.1.1",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^25.0.1",
		"mode-watcher": "^1.0.8",
		"layerchart": "2.0.0-next.27",
		"paneforge": "1.0.0",
		"postcss": "catalog:",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.1.1",
		"postcss-minify": "^1.1.0",
		"postcss-nesting": "^13.0.2",
		"postcss-pxtorem": "^6.1.0",
		"prettier": "^3.6.0",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"@connectrpc/connect": "^2.0.2",
		"@connectrpc/connect-web": "^2.0.2",
		"publint": "^0.3.12",
		"svelte": "catalog:svelte",
		"svelte-check": "catalog:svelte",
		"svelte-sonner": "^1.0.5",
		"sveltekit-superforms": "^2.27.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"@bufbuild/buf": "^1.55.1",
		"@bufbuild/protobuf": "^2.5.2",
		"@bufbuild/protoc-gen-es": "^2.5.2",
		"tailwindcss": "catalog:",
		"tw-animate-css": "^1.3.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"exports": {
		"./*.svelte": {
			"svelte": "./dist/*.svelte",
			"types": "./dist/*.svelte.d.ts"
		},
		"./proto/*.js": {
			"import": "./dist/protos/*.js",
			"types": "./dist/protos/*.d.ts"
		},
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		},
		"./*.css": {
			"import": "./dist/styles/*.css"
		},
		"./*.json": {
			"import": "./dist/*.json",
			"types": "./dist/*.json"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	]
}

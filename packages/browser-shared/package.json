		"@types/chrome": "^0.1.22",
		"eslint": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^15.15.0",
		"jsdom": "^25.0.1",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.0",

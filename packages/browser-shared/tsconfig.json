{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"types": ["chrome", "vite/client", "webextension-polyfill"],
		"strict": true,
		"skipLibCheck": true,
		"noPropertyAccessFromIndexSignature": true,
		"emitDeclarationOnly": false,
		"emitDecoratorMetadata": false,
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}

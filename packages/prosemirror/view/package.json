{
	"name": "@eurora/prosemirror-view",
	"version": "0.1.0",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./launcher": {
			"import": "./dist/launcher/index.js",
			"types": "./dist/launcher/index.d.ts"
		},
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		},
		"./*.css": {
			"import": "./dist/*.css"
		},
		"./*.svelte": {
			"svelte": "./dist/*.svelte",
			"types": "./dist/*.svelte.d.ts"
		}
	},
	"scripts": {
		"dev": "vite dev",
		"dev:package:svelte": "svelte-kit sync && svelte-package --watch",
		"package": "pnpm run --sequential \"/^package:.*/\"",
		"package:svelte": "svelte-kit sync && svelte-package",
		"prepublishOnly": "pnpm run package",
		"prepare": "svelte-kit sync",
		"test": "vitest run --mode development",
		"test:watch": "vitest --watch --mode development"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"svelte": "catalog:svelte",
		"svelte-check": "catalog:svelte",
		"svelte-preprocess": "^6.0.3",
		"svelte2tsx": "^0.7.44",
		"@sveltejs/vite-plugin-svelte": "catalog:svelte",
		"@sveltejs/adapter-static": "catalog:svelte",
		"@sveltejs/kit": "catalog:svelte",
		"@sveltejs/package": "^2.5.4",
		"@eurora/prosemirror-core": "workspace:*",
		"@eurora/ui": "workspace:*",
		"autoprefixer": "^10.4.21",
		"vite": "catalog:",
		"vitest": "catalog:",
		"prosemirror-commands": "^1.5.2",
		"prosemirror-keymap": "^1.2.2",
		"prosemirror-model": "^1.25.3",
		"prosemirror-state": "^1.4.3",
		"prosemirror-transform": "^1.8.0",
		"prosemirror-view": "^1.41.2",
		"prosemirror-schema-basic": "^1.2.4",
		"prosemirror-schema-list": "^1.5.1",
		"prosemirror-example-setup": "^1.1.2",
		"@eurora/typescript-config": "workspace:*",
		"prosemirror-dropcursor": "^1.8.2",
		"prosemirror-gapcursor": "^1.3.2",
		"bits-ui": "^2.11.4",
		"@lucide/svelte": "^0.544.0",
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "catalog:",
		"@tailwindcss/postcss": "catalog:",
		"postcss": "catalog:",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.1.1",
		"postcss-minify": "^1.1.0",
		"postcss-nesting": "^13.0.2",
		"postcss-pxtorem": "^6.1.0",
		"@storybook/addon-svelte-csf": "^5.0.8",
		"storybook": "^8.6.12"
	}
}

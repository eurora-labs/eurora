{
	"name": "@eurora/prosemirror-view",
	"version": "0.0.0",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./launcher": {
			"import": "./dist/launcher/index.js",
			"types": "./dist/launcher/index.d.ts"
		},
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		},
		"./*.css": {
			"import": "./dist/*.css"
		},
		"./*.svelte": {
			"svelte": "./dist/*.svelte",
			"types": "./dist/*.svelte.d.ts"
		}
	},
	"scripts": {
		"dev": "vite dev",
		"dev:package:svelte": "svelte-kit sync && svelte-package --watch",
		"dev:package:styles": "postcss ./src/lib/app.css -o ./dist/app.css --watch",
		"package": "pnpm run --sequential \"/^package:.*/\"",
		"package:svelte": "svelte-kit sync && svelte-package",
		"package:styles": "postcss ./src/lib/app.css -o ./dist/app.css",
		"prepublishOnly": "pnpm run package",
		"prepare": "svelte-kit sync",
		"test": "vitest run --mode development",
		"test:watch": "vitest --watch --mode development"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"svelte": "catalog:svelte",
		"svelte-check": "catalog:svelte",
		"svelte2tsx": "^0.7.47",
		"@sveltejs/vite-plugin-svelte": "catalog:svelte",
		"@sveltejs/adapter-static": "catalog:svelte",
		"@sveltejs/kit": "catalog:svelte",
		"@sveltejs/package": "^2.5.7",
		"@eurora/prosemirror-core": "workspace:*",
		"@eurora/ui": "workspace:*",
		"autoprefixer": "^10.4.24",
		"vite": "catalog:",
		"vitest": "catalog:",
		"prosemirror-commands": "^1.5.2",
		"prosemirror-keymap": "^1.2.2",
		"prosemirror-model": "^1.25.4",
		"prosemirror-state": "^1.4.4",
		"prosemirror-transform": "^1.11.0",
		"prosemirror-view": "^1.41.5",
		"prosemirror-schema-basic": "^1.2.4",
		"prosemirror-schema-list": "^1.5.1",
		"prosemirror-example-setup": "^1.1.2",
		"prosemirror-dropcursor": "^1.8.2",
		"prosemirror-gapcursor": "^1.4.0",
		"bits-ui": "^2.15.5",
		"@lucide/svelte": "catalog:",
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "catalog:",
		"@tailwindcss/postcss": "catalog:",
		"postcss": "catalog:",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.1.1",
		"postcss-minify": "^1.1.0",
		"postcss-nesting": "^13.0.2",
		"postcss-pxtorem": "^6.1.0",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"storybook": "^8.6.15"
	}
}

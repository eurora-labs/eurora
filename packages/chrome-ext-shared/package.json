{
	"name": "@eurora/chrome-ext-shared",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm check --watch",
		"package": "pnpm run --sequential \"/^package:.*/\"",
		"package:svelte": "svelte-kit sync && svelte-package",
		"prepublishOnly": "pnpm run package",
		"prepare": "svelte-kit sync",
		"test": "vitest run --mode development",
		"test:watch": "vitest --watch --mode development"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.37.0",
		"@mozilla/readability": "^0.6.0",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.545.0",
		"@playwright/test": "^1.56.0",
		"@sveltejs/adapter-static": "catalog:svelte",
		"@sveltejs/kit": "catalog:svelte",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "catalog:svelte",
		"@types/chrome": "^0.1.24",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "catalog:",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@tanstack/table-core": "^8.21.3",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.4",
		"autoprefixer": "^10.4.21",
		"clsx": "^2.1.1",
		"eslint": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^25.0.1",
		"mode-watcher": "^1.1.0",
		"layerchart": "2.0.0-next.40",
		"paneforge": "1.0.2",
		"postcss": "catalog:",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.1.1",
		"postcss-minify": "^1.1.0",
		"postcss-nesting": "^13.0.2",
		"postcss-pxtorem": "^6.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"@connectrpc/connect": "^2.1.0",
		"@connectrpc/connect-web": "^2.1.0",
		"publint": "^0.3.14",
		"svelte": "catalog:svelte",
		"svelte-check": "catalog:svelte",
		"svelte-sonner": "^1.0.5",
		"sveltekit-superforms": "^2.27.2",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "catalog:",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"exports": {
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		},
		"./*.svelte": {
			"svelte": "./dist/*.svelte",
			"types": "./dist/*.svelte.d.ts"
		},
		"./*.css": {
			"import": "./dist/styles/*.css"
		},
		"./*.json": {
			"import": "./dist/*.json",
			"types": "./dist/*.json"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	]
}

{
	"name": "@eurora/ui",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:watch": "pnpm run --parallel \"/^dev:package:.*/\"",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm check --watch",
		"dev:package:svelte": "svelte-kit sync && svelte-package --watch",
		"dev:package:styles": "node ./scripts/watch-styles.js",
		"package": "pnpm run --sequential \"/^package:.*/\"",
		"package:svelte": "svelte-kit sync && svelte-package",
		"package:styles": "postcss ./src/styles/main.css -o ./dist/styles/main.css",
		"design-tokens:build": "npx tz build && prettier --write ./src/lib/data/design-tokens.json ./src/styles/core/design-tokens.css",
		"prepublishOnly": "pnpm run package",
		"prepare": "svelte-kit sync",
		"storybook": "storybook dev --no-open -p 6006",
		"storybook:build": "storybook build",
		"test": "vitest run --mode development",
		"test:watch": "vitest --watch --mode development"
	},
	"peerDependencies": {
		"@icons-pack/svelte-simple-icons": "^5.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@eurora/shared": "workspace:*",
		"@internationalized/date": "^3.11.0",
		"@lucide/svelte": "^0.574.0",
		"@playwright/test": "^1.58.2",
		"@storybook/addon-docs": "^8.6.17",
		"@storybook/addon-essentials": "^8.6.12",
		"@storybook/addon-links": "^8.6.17",
		"@storybook/addon-svelte-csf": "^5.0.11",
		"@storybook/blocks": "^8.6.12",
		"@storybook/experimental-addon-test": "^8.6.12",
		"@storybook/svelte": "^8.6.17",
		"@storybook/sveltekit": "^8.6.17",
		"@storybook/test": "^8.6.15",
		"@sveltejs/adapter-static": "catalog:svelte",
		"@sveltejs/kit": "catalog:svelte",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "catalog:svelte",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/postcss": "catalog:",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.2.0",
		"@tanstack/table-core": "^8.21.3",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@xyflow/svelte": "^1.5.1",
		"autoprefixer": "^10.4.24",
		"bits-ui": "^2.15.8",
		"clsx": "^2.1.1",
		"embla-carousel-svelte": "^8.6.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^25.0.1",
		"layerchart": "2.0.0-next.45",
		"media-chrome": "^4.18.0",
		"mode-watcher": "^1.1.0",
		"nanoid": "^5.1.6",
		"paneforge": "1.0.2",
		"postcss": "catalog:",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.1.1",
		"postcss-minify": "^1.1.0",
		"postcss-nesting": "^13.0.2",
		"postcss-pxtorem": "^6.1.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.5.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.17",
		"storybook": "^8.6.17",
		"storybook-dark-mode": "^4.0.2",
		"svelte": "catalog:svelte",
		"svelte-check": "catalog:svelte",
		"svelte-sonner": "^1.0.7",
		"sveltekit-superforms": "^2.29.1",
		"tailwind-merge": "^3.4.1",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "catalog:",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "catalog:",
		"vitest": "catalog:",
		"zod": "^3.25.76"
	},
	"exports": {
		"./*.svelte": {
			"svelte": "./dist/*.svelte",
			"types": "./dist/*.svelte.d.ts"
		},
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		},
		"./*.css": {
			"import": "./dist/styles/*.css"
		},
		"./*.json": {
			"import": "./dist/*.json",
			"types": "./dist/*.json"
		},
		"./main.css": "./dist/styles/main.css"
	},
	"files": [
		"./dist/*.svelte",
		"./dist/*.json",
		"./dist/*.js",
		"./dist/*.json",
		"./dist/*.d.ts",
		"!./dist/*.test.*",
		"./dist/*.css",
		"./dist/*.woff2"
	],
	"dependencies": {
		"@shikijs/langs": "^3.22.0",
		"@shikijs/themes": "^3.22.0",
		"ai": "^6.0.92",
		"dompurify": "^3.3.1",
		"formsnap": "^2.0.1",
		"runed": "^0.37.1",
		"shiki": "^3.22.0",
		"svelte-streamdown": "^3.0.1",
		"svelte-toolbelt": "^0.10.6"
	}
}

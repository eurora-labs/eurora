{
	"name": "@eurora/ui",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:watch": "pnpm run --parallel \"/^dev:package:.*/\"",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm check --watch",
		"dev:package:svelte": "svelte-kit sync && svelte-package --watch",
		"dev:package:styles": "postcss ./src/styles/main.pcss -o ./dist/styles/main.css --watch",
		"package": "pnpm run --sequential \"/^package:.*/\"",
		"package:svelte": "svelte-kit sync && svelte-package",
		"package:styles": "postcss ./src/styles/main.pcss -o ./dist/styles/main.css",
		"design-tokens:build": "npx tz build && prettier --write ./src/lib/data/design-tokens.json ./src/styles/core/design-tokens.css",
		"prepublishOnly": "pnpm run package",
		"prepare": "svelte-kit sync",
		"storybook": "storybook dev --no-open -p 6006",
		"storybook:build": "storybook build",
		"test": "vitest run --mode development",
		"test:watch": "vitest --watch --mode development"
	},
	"peerDependencies": {
		"@icons-pack/svelte-simple-icons": "^5.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@eurora/shared": "workspace:*",
		"@eurora/eslint-config": "workspace:*",
		"@eurora/typescript-config": "workspace:*",
		"@internationalized/date": "^3.9.0",
		"@lucide/svelte": "^0.544.0",
		"@playwright/test": "^1.55.1",
		"@sveltejs/adapter-static": "catalog:svelte",
		"@sveltejs/kit": "catalog:svelte",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "catalog:svelte",
		"@storybook/addon-docs": "^8.6.12",
		"@storybook/addon-essentials": "^8.6.12",
		"@storybook/addon-links": "^8.6.12",
		"zod": "^3.25.76",
		"@storybook/addon-svelte-csf": "^5.0.8",
		"@storybook/blocks": "^8.6.12",
		"@storybook/experimental-addon-test": "^8.6.12",
		"@storybook/svelte": "^8.6.12",
		"@storybook/sveltekit": "^8.6.12",
		"@storybook/test": "^8.6.12",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "catalog:",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.13",
		"@tanstack/table-core": "^8.21.3",
		"@testing-library/jest-dom": "^6.9.0",
		"@testing-library/svelte": "^5.2.4",
		"storybook": "^8.6.12",
		"storybook-dark-mode": "^4.0.2",
		"autoprefixer": "^10.4.21",
		"bits-ui": "^2.11.4",
		"clsx": "^2.1.1",
		"embla-carousel-svelte": "^8.6.0",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^25.0.1",
		"mode-watcher": "^1.1.0",
		"layerchart": "2.0.0-next.40",
		"paneforge": "1.0.2",
		"postcss": "catalog:",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.1.1",
		"postcss-minify": "^1.1.0",
		"postcss-nesting": "^13.0.2",
		"postcss-pxtorem": "^6.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.13",
		"svelte": "catalog:svelte",
		"svelte-check": "catalog:svelte",
		"svelte-sonner": "^1.0.5",
		"sveltekit-superforms": "^2.27.1",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "catalog:",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.45.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"exports": {
		"./*.svelte": {
			"svelte": "./dist/*.svelte",
			"types": "./dist/*.svelte.d.ts"
		},
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		},
		"./*.css": {
			"import": "./dist/styles/*.css"
		},
		"./*.json": {
			"import": "./dist/*.json",
			"types": "./dist/*.json"
		},
		"./main.css": "./dist/styles/main.css"
	},
	"files": [
		"./dist/*.svelte",
		"./dist/*.json",
		"./dist/*.js",
		"./dist/*.json",
		"./dist/*.d.ts",
		"!./dist/*.test.*",
		"./dist/*.css",
		"./dist/*.woff2"
	],
	"dependencies": {
		"formsnap": "^2.0.1"
	}
}

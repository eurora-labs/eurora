{
	"productName": "Eurora Nightly",
	"identifier": "com.eurora-labs.eurora.nightly",
	"build": {
		"beforeBuildCommand": "[ \"$CI\" = \"true\" ] || pnpm build:desktop -- --mode nightly"
	},
	"bundle": {
		"active": true,
		"resources": [
			"LICENSES-THIRD-PARTY.md",
			"hosts/mac.chromium.native-messaging.json",
			"hosts/mac.edge.native-messaging.json",
			"hosts/mac.firefox.native-messaging.json",
			"hosts/linux.chromium.native-messaging.json",
			"hosts/linux.edge.native-messaging.json",
			"hosts/linux.firefox.native-messaging.json"
		],
		"externalBin": [
			"binaries/euro-native-messaging"
		],
		"icon": [
			"icons/nightly/32x32.png",
			"icons/nightly/128x128.png",
			"icons/nightly/128x128@2x.png",
			"icons/nightly/icon.icns",
			"icons/nightly/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"endpoints": [
				"https://api.eurora-labs.com/releases/nightly/{{target}}-{{arch}}/{{current_version}}/{{bundle_type}}"
